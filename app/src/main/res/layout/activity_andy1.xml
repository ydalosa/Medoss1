<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Andy1">

    <TextView
        android:id="@+id/tvAndy1"
        android:layout_width="134dp"
        android:layout_height="64dp"
        android:gravity="center"
        android:text="ANDY1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnAndy1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="btnAndy1"
        app:layout_constraintEnd_toEndOf="@+id/tvAndy1"
        app:layout_constraintStart_toStartOf="@+id/tvAndy1"
        app:layout_constraintTop_toBottomOf="@+id/tvAndy1" />
</androidx.constraintlayout.widget.ConstraintLayout>